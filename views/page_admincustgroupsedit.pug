extends page_layout2

block content
  if user && user.team !== 'staff'
        .container
            h1 #{title}
            br
            form(role='form' method='POST' action='/admin/groups/edit/' + group._id)
                .form-group
                    label(for='groupName') Customer Group:
                    input.form-control(class='mlen', name='groupName', type='text', placeholder='' value=group.name required)
                //- br
                .form-row.col-sm-7
                    .form-row
                        .form-group
                            input.btn.btn-success.btnSubmit(type="submit", value="Save Changes")
                    .form-row
                        .form-group
                            input.btn.btn-secondary.btnReset(type="button" onclick="window.location.href='/admin/groups'" value="Cancel")
            br
