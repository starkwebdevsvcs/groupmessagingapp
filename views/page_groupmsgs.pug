extends page_layout2

block content
    if user
        .container
            h1 #{title}
            br
            form(id="txtForm" role='form' method='POST' action='/messages/preview')
                .form-row.col-sm-7
                    .form-group
                        label(for='txtStandardMessage') Standard Message (Required):
                        select.form-control(name="txtStandardMessage" size="0")
                            option(disabled='', selected='', value='')  -- Select a Standard Message --
                            each message, i in standardMessages
                                option(value=message.text) #{message.text}
                .form-row.col-sm-7
                    .form-group
                        label(for='txtCustomMsg') Additional Message (Optional):
                        textarea.form-control( name='txtCustomMsg' placeholder='' required)
                .form-row.col-sm-7
                    .form-group
                        label(for='txtFrom') From Name (Optional):
                        input.form-control(name='txtFrom' type='text' placeholder='')
                    .form-group
                        label(for='txtPhone') From Phone: (Required)
                        input.form-control(name='txtPhone', type='number' placeholder='' min='2002000000' max='9999999999' required)
                .form-row.col-sm-7
                    .form-group
                        label(for='chkbxGroup') Send To (Required):
                        .form-control.form-check-inline(name='chkbxGroup')
                            label.form-check-label Option 1
                            input.form-check-input(type='checkbox' value='')
                            label.form-check-label Option 2
                            input.form-check-input(type='checkbox' value='')
                .form-row.col-sm-7
                    .form-group
                        label(for='uploadPicture') Add Picture (Optional):
                        input.form-control(type="file" name="uploadPicture" accept="image/*")
                br
                .form-row.col-sm-7
                    .form-row
                        .form-group
                            //- input.btn.btn-info.btn-fswf1(type="submit", value="Preview/Send")
                            input.btn.btn-success.btnSubmit(type="submit", value="Preview Msg")
                    .form-row
                        .form-group
                            //- button.btn.btn-info.btn-fswf2.clrForm(type="button") Reset Form
                            button.btn.btn-secondary.btnReset.clrForm(type="button") Reset Form
            br
