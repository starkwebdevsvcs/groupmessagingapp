extends page_layout2

block content
    if user
        .container
            h1 #{title}
            br
            hr
            h4 Please confirm  message content.
            br
            form(id="txtForm" role='form' method='POST' action='/msgservices/groupsend')
                .form-group
                    label(for='previewMessage') Text Message to be Sent:
                    //- Please confirm  message content for the #{messageGroup} group.
                    textarea.previewMsg.form-control(class='mlen' name='previewMessage' required)= messagetext
                    .previewMsg_Count
                    input.previewMsg.form-control(type="hidden", name="messageGroup" value=messageGroup)
                br
                .form-row.col-sm-7
                    .form-row
                        .form-group
                            input.btn.btn-success.btnSubmit(type="submit", value="Send Message")
                    .form-row
                        .form-group
                            input.btn.btn-secondary.btnReset(type="button" onclick="window.location.href='/messages/group'" value="Cancel")
        br
