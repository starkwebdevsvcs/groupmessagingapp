extends page_layout2

block content
  if user && user.role=='admin'
        .container
            h1 #{title}
            br
            form(role='form' method='POST' action='/admin/teams/edit/' + team._id)
                .form-group
                    label(for='teamName') Team:
                    input.form-control(class='mlen', name='teamName', type='text', placeholder='' value=team.name required)
                //- br
                .form-row.col-sm-7
                    .form-row
                        .form-group
                            input.btn.btn-success.btnSubmit(type="submit", value="Save Changes")
                    .form-row
                        .form-group
                            input.btn.btn-secondary.btnReset(type="button" onclick="window.location.href='/admin/teams'" value="Cancel")
            br
